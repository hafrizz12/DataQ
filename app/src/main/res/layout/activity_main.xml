<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pexels_fauxels_photo_of_people_hands"
                >

            </ImageView>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="-75dp"
                android:fontFamily="@font/poppins_black"
                android:text="Data Siswa"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="35dp"
                android:padding="16dp"
                android:background="@drawable/rounded_middle_shadow_card"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editTextNis"
                    android:layout_width="match_parent"
                    android:background="@drawable/texteditnew"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_height="wrap_content"
                    android:hint="NIS"
                    android:inputType="number" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="35dp"
                android:padding="16dp"
                android:background="@drawable/rounded_middle_shadow_card"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editTextNama"
                    android:background="@drawable/texteditnew"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nama" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="35dp"
                android:padding="16dp"
                android:background="@drawable/rounded_middle_shadow_card"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/texteditnew"
                    android:hint="Alamat"
                    android:maxLines="4"
                    android:fontFamily="@font/poppins_semibold"
                    android:inputType="textMultiLine"
                    android:padding="8dp"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="35dp"
                android:padding="16dp"
                android:background="@drawable/rounded_middle_shadow_card"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/spinnerKota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/texteditnew"
                    android:fontFamily="@font/poppins_semibold"
                    android:padding="8dp"
                    android:spinnerMode="dropdown"
                    android:entries="@array/kota"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="35dp"
                android:padding="16dp"
                android:background="@drawable/rounded_middle_shadow_card"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:id="@+id/jenisKelaminG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Laki-laki"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/black"
                        android:id="@+id/lakiLaki"></RadioButton>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Perempuan"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/black"
                        android:id="@+id/perempuan"></RadioButton>

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="35dp"
                android:padding="16dp"
                android:background="@drawable/rounded_middle_shadow_card"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/umur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/texteditnew"
                    android:fontFamily="@font/poppins_semibold"
                    android:hint="Umur"
                    android:inputType="number" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="35dp"
            android:gravity="center"
            android:padding="16dp"
            android:background="@drawable/rounded_middle_shadow_card"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/simpan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Simpan"
                android:textColor="@color/white"
                ></Button>

        </LinearLayout>




        </LinearLayout>




    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>